@@ -557,7 +557,7 @@ public class WorldServer extends World implements IThreadListener {
                 if (chunk.areNeighborsLoaded(1)) {
                     this.profiler.endStartSection("thunder");
 
-                    if (flag && flag1 && this.rand.nextInt(100000) == 0) {
+                    if (this.paperConfig.disableThunder && flag && flag1 && this.rand.nextInt(100000) == 0) { // Paper - Option to disable thunder
                         this.updateLCG = this.updateLCG * 3 + 1013904223;
                         int l = this.updateLCG >> 2;
                         BlockPos blockposition = this.adjustPosToNearbyEntity(new BlockPos(j + (l & 15), 0, k + (l >> 8 & 15)));
