+    public Entity releaseLeftShoulderEntity() {
+        Entity entity = this.spawnEntityFromShoulder0(this.getLeftShoulderEntity());
+        if (entity != null) {
+            this.setLeftShoulderEntity(new NBTTagCompound());
+        }
+        return entity;
+    }
