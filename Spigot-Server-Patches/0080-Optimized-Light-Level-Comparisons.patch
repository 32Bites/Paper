                 if (!event.isCancelled()) {
                     blockState.update(true);
                 }
-            } else if (worldIn.getLightFromNeighbors(pos.up()) >= 9) {
+            } else {
+                // Paper start
+                // If light was calculated above, reuse it, else grab it
+                if (lightLevel == -1) {
+                    lightLevel = worldIn.getLightFromNeighbors(pos.up());
+                }
+                if (lightLevel >= 9) {
+                // Paper end
